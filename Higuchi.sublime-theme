            Modified:               [180, 60, 0, 192]
            Modified (HL):          [255, 80, 20]
            Overlays:               [212, 210, 214]
            Tooltips:               [235, 233, 239]
            Match (QP):             [60, 120, 190]
            Match (SQP):            [40, 140, 240, 150]
            Puck:                   [80, 133, 190]

